
  <div class="div">
    <p id="notice"><%= notice %></p>

    <h1 class="text-center">Tv Shows</h1>

    <table class="table table-bordered table-dark">
      <thead >
        <tr>
          <th>Name</th>
          <th>Summary</th>
          <th>Release date</th>
          <th>Rating</th>
          <th>nationaliti</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
        <% @tv_shows.each do |tv_show| %>
        <tr>
          <td><%= tv_show.name %></td>
          <td><%= tv_show.summary %></td>
          <td><%= tv_show.release_date %></td>
          <td><%= tv_show.rating %></td>
          <td ><%= image_tag(url_for(tv_show.nationality.flag_img))  %></td>
          <td type="button" class="btn btn-outline-success"><%= link_to 'Show', tv_show %></td>
          <td type="button" class="btn btn-outline-info"><%= link_to 'Edit', edit_tv_show_path(tv_show) %></td>
          <td type="button" class="btn btn-outline-danger"><%= link_to 'Destroy', tv_show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
           <% if user_signed_in? %>
                    <td><%= link_to 'Show', tv_show %></td>
                <% end %>
                <% if (user_signed_in? && (current_user == tv_show.user)) %>
                    <td><%= link_to 'Edit', edit_tv_show_path(tv_show) %></td>
                    <td><%= link_to 'Destroy', tv_show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<br>
<div class="d-flex justify-content-center">
<button type="button" class="btn btn-secondary"><%= link_to 'New Tv Show', new_tv_show_path %></button>
</div>
